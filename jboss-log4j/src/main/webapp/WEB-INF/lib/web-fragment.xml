<!DOCTYPE web-fragment PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-fragment version="3.0" xmlns="http://java.sun.com/xml/ns/javaee"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">

<name>JTools-fragment</name>

 <listener>
  <listener-class>nys.its.SysPropTool.ApplicationPropertiesListener</listener-class>
 </listener>
  
 <servlet>
    <servlet-name>heapservlet</servlet-name>
    <servlet-class>nys.its.Heap.HeapServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>heapservlet</servlet-name>
    <url-pattern>/JTools/heapservlet/*</url-pattern>
  </servlet-mapping>

<servlet>
    <servlet-name>hprofservlet</servlet-name>
    <servlet-class>nys.its.Heap.HprofServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>hprofservlet</servlet-name>
    <url-pattern>/JTools/hprofservlet/*</url-pattern>
  </servlet-mapping>



  <security-constraint>
    <web-resource-collection>
        <web-resource-name>app</web-resource-name>
        <url-pattern>/JTools/img/*</url-pattern>
        <url-pattern>/JTools/css/*</url-pattern>
        <url-pattern>/JTools/js/*</url-pattern>
        <url-pattern>/JTools/fonts/*</url-pattern>
        <url-pattern>/JTools/sass/*</url-pattern>
    </web-resource-collection>
    <!-- OMIT auth-constraint -->
</security-constraint>
 
 
 <security-constraint>
  <web-resource-collection>
   <web-resource-name>JTools</web-resource-name>
   <url-pattern>/JTools/*</url-pattern>
   <http-method>GET</http-method>
   <http-method>POST</http-method>
  </web-resource-collection>
  <auth-constraint>
   <description>Let only managers use this app</description>
   <role-name>${DevRole}</role-name> 
   <role-name>jboss</role-name>
  <role-name>${DevRole2}</role-name> 
    </auth-constraint>
 </security-constraint>
 <login-config>
  <auth-method>FORM</auth-method>
        <realm-name>ApplicationRealm</realm-name>  
  <form-login-config>
   <form-login-page>/JTools/Login.jsp</form-login-page>
   <form-error-page>/JTools/error.jsp</form-error-page>
  </form-login-config>
 </login-config>
 <security-role>
  <role-name>${DevRole}</role-name>
 </security-role>
  <security-role>
  <role-name>${DevRole2}</role-name>
 </security-role>
 <security-role>
  <role-name>jboss</role-name>
 </security-role>
</web-fragment>